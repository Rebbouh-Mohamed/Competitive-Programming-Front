    "display": "flex",
    "width": "37.5rem",
    "flexDirection": "column",
    "alignItems": "center",
    "gap": "2.5rem"
  },
  "title": {
    "color": "var(--White, #FFF)",
    "textAlign": "center",
    "fontFamily": "Inter",
    "fontSize": "2rem",
    "fontStyle": "normal",
    "fontWeight": "700",
    "lineHeight": "2.5rem"
  },
  "form": {
    "display": "flex",
    "flexDirection": "column",
